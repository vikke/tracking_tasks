<h1>Home#index</h1>

<p style="color: green"><%= notice %></p>

<% if current_user.present? %>
  <% if @task_records.count == 0 || @task_records.first.end_time.present? %>
    <%= form_with url: home_index_path do |form| %>
      <%= form.label :query, "実行タスク名:" %>
      <%= form.text_field :task_name, list: 'tasks'%>
      <datalist id="tasks">
        <% @tasks&.each do |task| %>
          <option value="<%= task.task_name %>" />
        <% end %>
      </datalist>
      <%= form.submit "実行タスク登録" %>
    <% end %>
  <% end %>

  <ul>
  <% @task_records.each_with_index do |t, i| %>
    <li><%= "No.#{i}: #{t.task.task_name}"%><%= " / 開始: #{t.start_time}" %><%= " / #{t.end_time}" if t.end_time.present? %><%= " / #{t.spent_time} min." if t.spent_time.present? %>
    <%= form_with url: home_path(t), method: :patch do |form| %>
      <%= form.hidden_field(:id, value: t.id) %>
      <% if t.end_time.nil? %>
        <%= form.submit '終了', name: 'action_type', value: 'finish' %>
      <% end %>
    <% end %>
    </li>
  <% end %>
  </ul>
<% end %>
